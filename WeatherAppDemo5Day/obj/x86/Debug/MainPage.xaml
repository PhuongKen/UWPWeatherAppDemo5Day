<Page
    x:Class="WeatherAppDemo5Day.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherAppDemo5Day"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
 
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <RelativePanel>
            <Button x:ConnectionId='6' Name="HamburgerButton"
                    RelativePanel.AlignLeftWithPanel="True"
                                                 
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Height="45"
                    Width="45"
                    Content="&#xE700;"
                />
            <Button x:ConnectionId='7' Name="BackButton"
                    RelativePanel.RightOf="HamburgerButton"
                    RelativePanel.AlignBottomWithPanel="True"
                                            
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="20"
                    Height="45"
                    Width="45"
                    Content="&#xE0A6;"/>
            <TextBlock x:ConnectionId='8' Name="TitleTextBlock"

                       RelativePanel.RightOf="BackButton"

                       FontSize="28"

                       FontWeight="Bold"

                       Margin="20,5,0,0"/>
            <AutoSuggestBox x:ConnectionId='9' Name="SearchAutoSuggestBox"
                            PlaceholderText="Search for sounds"
                            Width="200"
                            QueryIcon="Find"
                                                                          
                                                                                
                            RelativePanel.AlignRightWithPanel="True"/>
        </RelativePanel>
        <SplitView x:ConnectionId='1' Grid.Row="1" Name="MySplitView"
                   DisplayMode="CompactOverlay"
                   CompactPaneLength="45"
                   OpenPaneLength="200">
            <SplitView.Pane>
                <ListBox x:ConnectionId='2' SelectionMode="Single"
                                                                    >
                    <ListBoxItem x:ConnectionId='3' Name="WeatherDay">
                        <StackPanel>
                            <TextBlock
                                Text="&#xE80F;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="18" />
                            <TextBlock Text="Weather day"
                                        FontSize="11"
                                       Margin="34,0,0,0"
                                />
                        </StackPanel>
                    </ListBoxItem>
                    <ListBoxItem x:ConnectionId='4' Name="Weather5Day">
                        <StackPanel>
                            <TextBlock
                                Text="&#xE1CE;"
                                FontFamily="Segoe MDL2 Assets"
                                FontSize="18" />
                            <TextBlock Text="Weather 5 day"
                                        FontSize="11"
                                       Margin="34,0,0,0"
                                />
                        </StackPanel>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:ConnectionId='5' Name="MyFrame"/>
            </SplitView.Content>
        </SplitView>
    </Grid>
   
</Page>

