<Page x:ConnectionId='1'
    x:Class="WeatherAppDemo5Day.WeatherDay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WeatherAppDemo5Day"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                        >

    <StackPanel>
        <TextBlock x:ConnectionId='2' Name="CityTextBlock" FontSize="50" HorizontalAlignment="Center"/>

        <StackPanel Background="Brown" HorizontalAlignment="Center">
            <TextBlock x:ConnectionId='3' Name="DateTextBlock" Text="Hôm nay" Margin="0,20,0,0"/>
            <Image x:ConnectionId='4' Name="ResultImage"  Width="200" Height="200"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nhiệt độ hiện tại:"/>
                <TextBlock Text="    "/>
                <TextBlock x:ConnectionId='8' Name="TempTextBlock"/>
                <TextBlock Text="&#186;"/>
                <TextBlock Text="C"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nhiệt độ thấp nhất:"/>
                <TextBlock Text="   "/>
                <TextBlock x:ConnectionId='7' Name="TempMinTextBlock"/>
                <TextBlock Text="&#186;"/>
                <TextBlock Text="C"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Nhiệt độ cao nhất:"/>
                <TextBlock Text="    "/>
                <TextBlock x:ConnectionId='6' Name="TempMaxTextBlock"/>
                <TextBlock Text="&#186;"/>
                <TextBlock Text="C"/>
            </StackPanel>
            <TextBlock x:ConnectionId='5' Name="DescriptionTextBlock"/>
        </StackPanel>
    </StackPanel>

</Page>

